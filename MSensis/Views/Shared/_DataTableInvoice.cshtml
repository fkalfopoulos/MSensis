@using MSensis.ViewModels;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@model ClientViewModel


@{
    ViewData["Title"] = "Delete";
}


<!-- Main content -->

   

                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@_localizer["Company"]</th>
                                <th>@_localizer["Client"]</th>
                                <th>@_localizer["Invoice Date"]</th>
                                <th> @_localizer["Invoice type"]</th>
                                <th> @_localizer["Print pdf"]</th>
                                <th> @_localizer["View Document"]</th>
                                <th> @_localizer["Update Invoice"]</th>
                                <th> @_localizer["View Products"]</th>
                                <th> @_localizer["Total Vat"]</th>
                                <th> @_localizer["Total Value"]</th>
                                <th>@_localizer["Issue invoice"]</th>
                                <th>@_localizer["Delete Invoice"]</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.Pdfs)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Company.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Client.CompanyName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Invoice.Timestamp)</td>
                                <td>@Html.DisplayFor(modelItem => item.Invoice.Invoice_Type)</td>

                                <td>  <a asp-action="CreatePDF" asp-controller="MSensis" asp-route-id="@item.Id">@_localizer["Download Pdf"] <i class="fa fa-download"></i></a></td>

                                <td>  <a asp-action="ViewInvoice" asp-controller="Home" asp-route-id="@item.Id">@_localizer["View"] <i class="fa fa-eye"></i></a> </td>
                                <td>
                                    <a asp-action="Update_Invoice" asp-route-id="@item.Invoice.Id">@_localizer["Update"] <i class="fa fa-edit"></i></a>
                                </td>
                                <td>
                                    <a asp-action="ViewProducts" asp-route-id="@item.Id" data-toggle="tooltip" data-position="top" data-delay="50" data-tooltip="Download PDF"
                                       style="padding-right: 2px;">@_localizer["View Products"]<i class="fa fa-edit"></i></a>
                                </td>
                                <td>
                                    @item.TotalVat.ToString("#.##")
                                </td>
                                <td>
                                    @item.TotalValue.ToString("#.##")
                                </td>
                                <td>
                                    <a asp-action="Issue_Invoice" asp-controller="MSensis" asp-route-id="@item.Invoice.Id" data-toggle="tooltip" data-position="top" data-delay="50" data-tooltip="Download PDF"
                                       style="padding-right: 2px;">@_localizer["Issue Invoice"]<i class="fa fa-edit"></i></a>

                                </td>

                                <td>
                                    <a asp-action="Ιnvoice_del" asp-controller="MSensis" asp-route-id="@item.Invoice.Id" data-toggle="tooltip" data-position="top" data-delay="50" data-tooltip="Delete Invoice"
                                       style="padding-right: 2px;">@_localizer["Delete Invoice"]<i class="fa fa-trash-o"></i></a>

                                </td>

                            </tr>
                        }

                    </table>

                </div>
<script>
     $(function () {
        $('#example1').DataTable();
    });
</script>
