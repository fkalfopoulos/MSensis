@using MSensis.ViewModels;

@model PDFViewModel

@{
    ViewData["Title"] = "pdf";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/styles222.css">
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css">
</head>
<br />

@{ var date = DateTime.Now; }

<div>
      
        <img src="~/content/@Url.Content(Model.Company.ImageSrc)" />
   
</div>
<br />
<br />
<br />


<table style="width:1247px;">
    <tbody>
        <tr>
            <td style="width:638px;">Είδος Παραστατικού </td>
