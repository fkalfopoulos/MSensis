@using MSensis.ViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@model Client

<head>
    <link rel="stylesheet" href="~/css/form.css" />
</head>
<section class="content-header">
    <h1>
        @_localizer["Edit Client"]
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">

    <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/Home/Update_Client">
        <div class="row">
            <div class="col-75">
                <div class="container">


                    <div class="row">
                        <div class="col-50">

                            <label for="fname"><i class="fa fa-user"></i>@_localizer["Client Name"]</label>
                            <input type="text" id="fname" name="CompanyName" placeholder=" " value="@Model.CompanyName" >

                            <label for="email"><i class="fa fa-envelope"></i> Email</label>
                            <input type="text" id="email" name="Email" value="@Model.Email" placeholder="client@gmail.com">

                            <label for="adr"><i class="fa fa-address-card-o"></i> @_localizer["Address"]</label>
                            <input type="text" id="adr" name="Address" placeholder="@_localizer["Address"]" value="@Model.Address">

                            <label for="city"><i class="fa fa-institution"></i> @_localizer["City"]</label>
                            <input type="text" id="city" name="City" placeholder="@_localizer["City"]" value="@Model.City">

                            <div class="row">
                                <div class="col-50">
                                    <label for="state">@_localizer["Occupation"]</label>
                                    <input type="text" id="state" name="Client_Occupation" placeholder="@_localizer["Occupation"]" value="@Model.Client_Occupation">
                                </div>
                                <div class="col-50">
                                    <label for="zip">@_localizer["Zip"]</label>
                                    <input type="text" id="zip" name="ZipCode" placeholder="10001" value="@Model.ZipCode">

                                </div>
                                <div class="col-50">
                                    <label for="Telephone">@_localizer["Telephone"]</label>
                                    <input type="text" id="zip" name="TelephoneNumber" placeholder="10001" value="@Model.TelephoneNumber">
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-50">
                                <label for="expyear">@_localizer["DOY"]</label>
                                <input type="text" id="expyear" name="DOY" placeholder="Ε" value="@Model.DOY">
                            </div>
                            <div class="col-50">
                                <label for="cvv">@_localizer["Social Security Number"]</label>
                                <input type="text" id="cvv" name="AFM" placeholder="323232" value="@Model.AFM">
                            </div> 
                        </div>

                    </div>

                </div>

            </div>
        </div>


        <div class="box-footer">
            <button type="submit" class="btn btn-info pull-right" onclick="history.go(-1); return false;">@_localizer["Back"]</button>
            <button type="submit" class="btn btn-info pull-right">@_localizer["Save"]</button>
        </div>

        <input type="hidden" name="Id" value="@Model.Id" />
    </form>
</section>






 
 

