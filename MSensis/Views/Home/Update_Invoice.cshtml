@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@model Invoice

<head>
    <link rel="stylesheet" href="~/css/form.css" />
</head>

<!-- Main content -->
<section class="content container-fluid">

    <section class="content-header">
        <h3 class="box-title">@_localizer["Edit Invoice"]</h3>
    </section>

    <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/Home/Update_Invoice">
        <div class="row">
            <div class="col-75">
                <div class="container">


                    <div class="row">
                        <div class="col-50">

                            <label for="fname"><i class="fa fa-user"></i> @_localizer["Ιnvoice title"]</label>
                            <input type="text" id="fname" name="Invoice_Description" placeholder="" value="@Model.Description">

                            <label for="email"><i class="fa fa-envelope"></i> @_localizer["Invoice Code"]</label>
                            <input type="text" id="email" name="Invoice_Code" placeholder="" value="@Model.Code" />

                            <label for="adr"><i class="fa fa-address-card-o"></i> @_localizer["Price per unit"]</label>
                            <input type="text" id="adr" name="PricePerUnit" placeholder="" value="@Model.PricePerUnit" />

                            <label for="city"><i class="fa fa-institution"></i> @_localizer["Price Before Discount"]</label>
                            <input type="text" id="city" name="PriceBeforeDiscount" placeholder="" value="@Model.PriceBeforeDiscount" />

                            <div class="row">
                                <div class="col-50">
                                    <label for="state">@_localizer["Price after Discount"]</label>
                                    <input type="text" id="state" name="PriceAfterDiscount" placeholder="" value="@Model.PriceAfterDiscount" />
                                </div>
                                <div class="col-50">
                                    <label for="zip">@_localizer["Discount"]</label>
                                    <input type="text" id="zip" name="Discount" placeholder="" value="@Model.Discount" />
                                </div>

                            </div>
                        </div>

                        <div class="col-50">
                            <h3>Payment</h3>
                            <label for="fname">Accepted Cards</label>
                            <div class="icon-container">
                                <i class="fa fa-cc-visa" style="color:navy;"></i>
                                <i class="fa fa-cc-amex" style="color:blue;"></i>
                                <i class="fa fa-cc-mastercard" style="color:red;"></i>
                                <i class="fa fa-cc-discover" style="color:orange;"></i>
                            </div>
                            <label for="cname">Name on Card</label>
                            <input type="text" id="cname" name="cardname" placeholder="John More Doe">
                            <label for="ccnum">Credit card number</label>
                            <input type="text" id="ccnum" name="cardnumber" placeholder=" ">
                            <label for="expmonth">Exp Month</label>
                            <input type="text" id="expmonth" name="expmonth" placeholder=" ">

                            <div class="row">
                                <div class="col-50">
                                    <label for="expyear">@_localizer["Sale Price"]</label>
                                    <input type="text" id="expyear" name="expyear" placeholder="">
                                </div>
                                <div class="col-50">
                                    <label for="cvv">@_localizer["Quantity"]</label>
                                    <input type="text" id="cvv" name="Invoice_Quantity" placeholder="" value="@Model.Quantity" />
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

            <div class="col-25">
                <div class="container">
                    <h4>
                        <span class="price" style="color:black">
                            <label for="cvv">@_localizer["VAT"]</label>
                            <input type="text" id="cvv" name="Vat" placeholder="" value="@Model.Vat" />
                        </span>
                    </h4>

                    <hr>
                    <p>  <span class="price" style="color:black"><b> </b></span></p>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">@_localizer["Comments"]</label>
            <div class="col-sm-10">

                <input type="text" id="cvv" name="Invoice_Comments" placeholder="" value="@Model.Comments">
            </div>
        </div>





        <div class="box-footer">
            <button type="submit" class="btn btn-info pull-right" onclick="history.go(-1); return false;">@_localizer["Back"]</button>
            <button type="submit" class="btn btn-info pull-right">@_localizer["Save"]</button>
        </div>

        <input type="hidden" name="Id" value="@Model.Id" />
    </form>
</section>



