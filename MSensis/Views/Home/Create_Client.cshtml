@using MSensis.ViewModels
@model ClientViewModel

<head>
    <link rel="stylesheet" href="~/css/form.css" />
</head>
<section class="content-header">
    <h1>
        Add Client
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
 

    <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/Home/Create_Client">
        <div class="row">
            <div class="col-75">
                <div class="container">


                    <div class="row">
                        <div class="col-50">

                            <label for="fname"><i class="fa fa-user"></i>Client Name</label>
                            <input type="text" id="fname" name="CompanyName" placeholder="John M. Doe">
                            <label for="email"><i class="fa fa-envelope"></i> Email</label>

                            <input type="text" id="email" name="Email" placeholder="client@gmail.com">
                            <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>

                            <input type="text" id="adr" name="Address" placeholder="Address">
                            <label for="city"><i class="fa fa-institution"></i> City</label>
                            <input type="text" id="city" name="City" placeholder="City">

                            <div class="row">
                                <div class="col-50">
                                    <label for="state">Occupation</label>
                                    <input type="text" id="state" name="Client_Occupation" placeholder="Απασχόληση">
                                </div>
                                <div class="col-50">
                                    <label for="zip">Zip</label>
                                    <input type="number" id="zip" name="ZipCode" placeholder="10001">

                                </div>
                                <div class="col-50">
                                    <label for="Telephone">Telephone</label>
                                    <input type="number" id="zip" name="TelephoneNumber" placeholder="10001">
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-50">
                                <label for="expyear">ΔΟΥ</label>
                                <input type="text" id="expyear" name="DOY" placeholder="Ε">
                            </div>
                            <div class="col-50">
                                <label for="cvv">ΑΦΜ</label>
                                <input type="number" id="cvv" name="AFM" placeholder="323232">
                            </div>
                        </div>
                       
                        </div>

                    </div>
                   
                </div>
            </div>
         

        <div class="box-footer">

            <button type="submit" class="btn btn-info pull-right">Create</button>
        </div>
    </form>
</section>



