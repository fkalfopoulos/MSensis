@using MSensis.ViewModels
@model Product

<head>
    <link rel="stylesheet" href="~/css/form.css" />
</head>
<section class="content-header">
    <h1>
        Edit Client
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit Client</h3>
        </div>
    </div>

    <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/Home/Edit_Product">
        <div class="row">
            <div class="col-75">
                <div class="container">


                    <div class="row">
                        <div class="col-50">

                            <label for="fname"><i class="fa fa-user"></i>Client Name</label>
                            <input type="text" id="fname" name="Description" placeholder=" " value="@Model.Description">

                            <label for="email"><i class="fa fa-envelope"></i> Email</label>
                            <input type="number" id="email" name="PRice" value="@Model.Absolute_value" placeholder="Price">
                            <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>

                            <input type="text" id="adr" name="Address" placeholder="Discount" value="@Model.Discount">
                            <label for="city"><i class="fa fa-institution"></i> City</label>
                            <input type="number" id="city" name="PriceAfterDiscount" placeholder="PriceAfterDiscount" value="@Model.PriceAfterDiscount">

                            <div class="row">
                                <div class="col-50">
                                    <label for="state">Occupation</label>
                                    <input type="number" id="state" name="PriceBeforeDiscount" placeholder="PriceBeforeDiscount" value="@Model.PriceBeforeDiscount">
                                </div>
                                <div class="col-50">
                                    <label for="zip">Zip</label>
                                    <input type="number" id="zip" name="ZipCode" placeholder="10001" value="@Model.Quantity">

                                </div>
                                <div class="col-50">
                                    <label for="Telephone">Telephone</label>
                                    <input type="number" id="zip" name="Code" placeholder="" value="@Model.Code">
                                </div>
                            </div>
                        </div>

                         
                    </div>

                </div>

            </div>
        </div>


        <div class="box-footer">
            <button type="submit" class="btn btn-info pull-right" onclick="history.go(-1); return false;">Back</button>
            <button type="submit" class="btn btn-info pull-right">Save</button>
        </div>

        <input type="hidden" name="Id" value="@Model.Id" />
    </form>
</section>









